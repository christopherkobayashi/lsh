check:
	true

install: $(TARGETS)
	$(INSTALL) -d $(bindir)
	$(INSTALL_PROGRAM) $(TARGETS) $(bindir)

distdir: $(DISTFILES)
	cp $^ $(distdir)

clean:
	-rm -f $(TARGETS) *.o *.d

distclean: clean
	-rm -f Makefile

-include $(SOURCES:.c=.$(OBJEXT).d)
