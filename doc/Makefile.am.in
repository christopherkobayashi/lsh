## Process this file with make_am to produce Makefile.am
BODY:

Makefile.am: Makefile.am.in
	(cd $(top_srcdir); ./make_am)

# FIXME: Make this less GNU-make specific

MANPAGES = $(wildcard *.[1-9])
info_TEXINFOS = lsh.texinfo

EXTRA_DIST = HACKING NOTES PORTS TASKLIST configuration.txt \
	Makefile.am.in $(MANPAGES) \
	srp-spec.nroff srp-spec.txt fixff.sh fixff.pl

DVIS = $(addsuffix .dvi, $(MANPAGES))
PSS =  $(addsuffix  .ps, $(MANPAGES))

all: srp-spec.txt

# all:	dvi ps

dvi:	$(DVIS)

ps:	$(PSS)

%.dvi: %
	$(GROFF) -Tdvi -mandoc $< > $@

%.ps: %
	$(GROFF) -Tps -mandoc $< > $@


%.txt : %.nroff
	$(GROFF) -ms -Tlatin1 $< | perl $(srcdir)/fixff.pl >$@T
	test -s $@T && mv -f $@T $@

DISTCLEANFILES = $(DVIS) $(PSS)

include $(top_srcdir)/misc/ctags.mk
